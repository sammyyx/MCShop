<template>
    <div class="bundle" if="{{shown}}">
        <div class="item" id="{{_id}}">
            <mc-item _id="{{_id}}" name="{{name}}" icon="{{icon}}" material="{{material}}" class="pic"></mc-item>
        </div>
        <div class="name">
            <text class="name">{{name}}</text>
        </div>
        <div class="tools">
            <text class="des" onclick="clickDesBut">-</text>
            <text class="number">{{itemNumInSp}}</text>
            <text class="inc" onclick="clickIncBut">+</text>
        </div>
    </div>
</template>

<style>
    .bundle {
        margin-bottom: 20px;
        border-bottom-width: 2px;
        border-bottom-style: dashed;
        border-bottom-color: #eeeeee;
    }
    .pic {
        width: 150px;
        height: 150px;
        flex: 1;
    }

    .name {
        font-size: 30px;
        text-align: center;
        flex: 2;
    }

    .item {
        flex: 1;
    }

    .number {
        font-size: 40px;
        flex: 1;
    }

    .tools {
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
        flex: 1;
    }

    .bundle {
        flex-direction: row;
        align-items: center;
        justify-content: space-between;
    }

    .des {
        font-size: 40px;
        flex: 1;
    }

    .inc {
        font-size: 40px;
        flex: 1;
    }
</style>

<script>
    require('./mc-item.we');
    var sqliteModule = require('@weex-module/sqlitemodule');
    var modal = require('@weex-module/modal');
    var navigator = require('@weex-module/navigator');
    module.exports = {
        data: {
            name: null,
            _id: null,
            icon: null,
            material: null,
            itemNumInSp: null,
            shown: true
        },
        created: function () {
            var self = this;
            sqliteModule.showItemNumber(this._id, function (num) {
                self.itemNumInSp = num;
            });
        },
        methods: {
            clickDesBut: function (e) {
                if(this.itemNumInSp == 1) {
                    var self = this;
                    modal.confirm({
                        message: "delete " + this.name + " from this shopping list?",
                        okTitle: "yes",
                        cancelTitle: "no"
                    }, function(res) {
                        if(res == "yes") {
                            self.itemNumInSp--;
                            sqliteModule.deleteItemFromSp(self._id);
                            self.$dispatch("itemnumchange", {});
                            self.shown = false;
                        }
                    });
                } else {
                    this.itemNumInSp--;
                }
                sqliteModule.updateItemNumber(this._id, this.itemNumInSp, function (e) {
                });
            },
            clickIncBut: function (e) {
                this.itemNumInSp++;
                sqliteModule.updateItemNumber(this._id, this.itemNumInSp, function (e) {
                });
            }
        }
    }
</script>
